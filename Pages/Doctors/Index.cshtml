@page "{searchString&&Values?}"

@model hosApp.Pages.Doctors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form class="d-flex">
    <input class="form-control me-2" type="search" placeholder="Search" asp-route="" asp-for="SearchString"
        aria-label="Search">

    <select class="form-select" aria-label="Default select example">

        <option value="Name">Name</option>
        <option value="Speciality">Speciality</option>
    </select>
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor[0].Speciality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speciality)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
